<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.tvlogo.downloader" name="TVLogo Downloader - Context menu" version="0.0.1" provider-name="enen92">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
    <import addon="script.tvlogo.downloader"/>
  </requires>
  <extension point="kodi.context.item" library="addon.py">
    <item>
      <label>Download logo...</label>
      <visible>Window.IsVisible(MyPVRChannels.xml)|Window.IsVisible(MyPVRGuide.xml)</visible>
    </item>
  </extension>
  <extension point="kodi.addon.metadata">
    <platform>all</platform>
    <summary lang="en">TVLogo downloader context menu items</summary>
    <description lang="en">This context menu addons adds a shortcut to TVLogo Downloader in your channels context menu for individual logo downloading</description>
